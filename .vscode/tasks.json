{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "C/C++: emcc build active file",
			"command": "emcc",
			"args": [
				"--bind",
				"-s",
				"EXPORTED_RUNTIME_METHODS=['cwrap']",
				"-s",
				"EXPORTED_FUNCTIONS=['_fillArray']",
				"${file}",
				"-o",
				"${fileDirname}/${fileBasenameNoExtension}.js"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "compiler: emcc"
		}
	]
}